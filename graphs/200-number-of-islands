class Solution:
    def numIslands(self, grid: List[List[str]]) -> int:
        visited = set()
        island_count = 0

        rowlen = len(grid)
        collen = len(grid[0])

        def dfs(row, col):
            if min(row, col) < 0 or col == collen or row == rowlen or grid[row][col] == "0" or (row, col) in visited:
                return
            
            visited.add((row, col))
            dfs(row - 1, col)
            dfs(row + 1, col)
            dfs(row, col - 1)
            dfs(row, col + 1)

        for row in range(rowlen):
            for col in range(collen):
                if grid[row][col] == '1' and (row, col) not in visited:
                    dfs(row, col)
                    island_count += 1

        return island_count