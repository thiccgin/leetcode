class Solution:
    def maxAreaOfIsland(self, grid: List[List[int]]) -> int:
        visited = set()
        rowlen = len(grid)
        collen = len(grid[0])
    
        def dfs(row, col):
            if min(row, col) < 0 or row == rowlen or col == collen or grid[row][col] == 0 or (row, col) in visited:
                return 0

            visited.add((row, col))
            count = 1
            count += dfs(row - 1, col)
            count += dfs(row + 1, col)
            count += dfs(row, col - 1)
            count += dfs(row, col + 1)
            return count

        biggest_size = 0
        for row in range(rowlen):
            for col in range(collen):
                if grid[row][col] == 1:
                    island_size = dfs(row, col)
                    if island_size > biggest_size:
                        biggest_size = island_size
        return biggest_size